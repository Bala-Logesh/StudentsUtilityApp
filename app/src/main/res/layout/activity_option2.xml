<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootdisp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Option2">

    <EditText
        android:id="@+id/crte"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:hint="Enter the task" />

    <LinearLayout
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/datepick"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="Choose a date" />

        <Button
            android:id="@+id/timepick"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="Choose a time" />

        <Button
            android:id="@+id/task"
            android:layout_width="106dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/date"
            android:includeFontPadding="false"
            android:text="Create a new task" />

    </LinearLayout>

    <TextView
        android:id="@+id/op2title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="This is the ToDo list"
        android:textAlignment="center"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textSize="32dp" />

    <ListView
        android:id="@+id/lvItems"
        android:layout_width="match_parent"
        android:layout_height="424dp"
        android:layout_above="@+id/task"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp" />

</LinearLayout>